<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title><%= title %></title>

  <!-- âœ… Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
  
  <!-- âœ… Bootstrap Icons -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet" />
</head>
<body>
  <!-- âœ… Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
      <!-- Logo -->
      <a class="navbar-brand" href="/">Mi App</a>

      <!-- BotÃ³n hamburguesa -->
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent" 
        aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <!-- Contenido colapsable -->
      <div class="collapse navbar-collapse" id="navbarContent">
        <ul class="navbar-nav ms-auto">
          <% if (user) { %>
            <li class="nav-item">
              <span class="nav-link">Hola, <%= user.nombre %> <%= user.apellido %></span>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/perfil"><i class="bi bi-person-circle"></i> Perfil</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" id="logoutLink" href="/logout">Cerrar SesiÃ³n</a>
            </li>
          <% } else { %>
            <li class="nav-item"><a class="nav-link" href="/login">Iniciar SesiÃ³n</a></li>
            <li class="nav-item"><a class="nav-link" href="/register">Registrarse</a></li>
          <% } %>
        </ul>
      </div>
    </div>
  </nav>

  <!-- âœ… Bootstrap JS al final para mejor rendimiento -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

  <!-- âœ… Evitar comportamiento de cachÃ© al volver atrÃ¡s -->
  <script>
    window.addEventListener("pageshow", function (event) {
      if (event.persisted) {
        window.location.reload();
      }
    });
  </script>

  <!-- âœ… ConfirmaciÃ³n y limpieza al cerrar sesiÃ³n -->
  <script>
    document.addEventListener("DOMContentLoaded", () => {
      const logoutLink = document.getElementById("logoutLink");
      if (logoutLink) {
        logoutLink.addEventListener("click", (e) => {
          e.preventDefault();
          if (confirm("Â¿EstÃ¡s seguro de que deseas cerrar sesiÃ³n?")) {
            // ðŸ§¹ Borrar cualquier dato almacenado en el navegador
            localStorage.clear();
            sessionStorage.clear();
            window.location.href = "/logout";
          }
        });
      }
    });
  </script>
</body>
</html>
